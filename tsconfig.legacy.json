{
  "compilerOptions": {
    "rootDir": "./compare",
    "outDir": "./compare",
    "target": "esnext",
    "module": "esnext",
    "importHelpers": true,
    "allowJs": false,
    "jsx": "react",
    "skipLibCheck": true,
    "skipDefaultLibCheck": true,
    "allowSyntheticDefaultImports": true,
    "plugins": [
      {
        "transform": "typescript-plugin-styled-components",
        "type": "config",
        "ssr": true,
        "displayName": true,
        "minify": true
      }
    ]
  },
  "include": ["./compare/**/*.ts", "./compare/**/*.tsx"],
  "exclude": []
}
